<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control 
    namespace="AppointmentAzureMap"
    constructor="AppointmentAzureMapPCF"
    version="0.0.27"
    display-name-key="Appointment Azure Map"
    description-key="Displays appointments on Azure Maps"
    control-type="standard">

    <!-- Resources -->
    <resources>
      <code path="index.ts" order="1" />
      <css path="css/AppointmentAzureMapPCF.css" order="2" />
    </resources>

    <!-- Dataset -->
    <data-set 
      name="appointments"
      display-name-key="Appointment_Display_Key">
    </data-set>

    <!-- WebAPI usage -->
    <feature-usage>
      <uses-feature name="WebAPI" required="true" />
    </feature-usage>

  </control>
</manifest>
